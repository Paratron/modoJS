  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Paratron/modoJS/issues"
  },
  "homepage": "https://github.com/Paratron/modoJS#readme",
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "foundation-sites": "^6.4.3",
    "node-sass": "^4.9.2"
  }
}
