{
  "name": "modojs",
  "version": "2.0.0",
  "description": "Component collection for React applications.",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:js && npm run build:style && robocopy ./src/package.json ./dist",
